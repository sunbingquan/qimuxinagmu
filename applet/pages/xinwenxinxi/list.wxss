.e-card-list {
  border-bottom: 10rpx #f2f2f2 solid;
  display: flex;
  padding: 20rpx 0;
}
.e-card-list .image {
  padding: 0 20rpx;
}
.e-card-info {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  padding-right: 16rpx;
}
.e-card-info .title {
  font-size: 28rpx;
  margin-bottom: 10px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.e-card-info .description {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.e-card-list:last-child {
  border-bottom: none;
}
